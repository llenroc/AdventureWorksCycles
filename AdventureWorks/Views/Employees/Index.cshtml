@model IEnumerable<AdventureWorks.Models.Employees>
@using GridMvc.Html  

<div class="row">
    <div class="col-xs-12 col-md-8">
        @{
            ViewBag.Title = "Index";
        }

        <h2>Angestellte: Übersicht</h2>
        <br />
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-md-8">
        <form class="form-inline">
            <div class="form-group">
                <label for="nameSearchBoxLabel">Suche nach Name:</label>
                <input type="text" class="form-control" id="searchString" name="SearchString" placeholder="John Doe">
                <button type="submit" class="btn btn-default">Suchen</button>
            </div>
        </form>
    </div>
</div>
<br />

<div class="code-cut">
    @Html.Grid(Model).Named("employeeGrid").Columns(columns =>
{
    columns.Add(c => c.BusinessEntityID).Titled("ID").Filterable(true).Sanitized(false).Encoded(false).RenderValueAs(model => Html.ActionLink(model.EmployeeID,"Details", "EmployeeDepartmentHistories", new { id = model.BusinessEntityID }, null).ToHtmlString());
    columns.Add(c => c.JobTitle).Titled("Titel").Filterable(true);
    columns.Add(c => c.BirthDate).Titled("Geburtsdatum").Format("{0:dd/MM/yyyy}").Filterable(true);
    columns.Add(c => c.FirstName).Titled("Vorname").Filterable(true);
    columns.Add(c => c.MiddleName).Titled("Mittelname").Filterable(true);
    columns.Add(c => c.LastName).Titled("Nachname").Filterable(true)
    .Encoded(false)
    .Sanitized(false)
    .SetWidth(30);
}).WithPaging(10).Sortable(true).Selectable(true)

</div>